{
  "name": "@liquidrazor/list-display",
  "version": "0.1.5",
  "description": "Headless-friendly React list display component with filtering, sorting, pagination, and actions.",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "license": "MIT",
  "author": "LiquidRazor",
  "keywords": [
    "react",
    "list",
    "table",
    "datagrid",
    "filtering",
    "sorting",
    "pagination",
    "actions"
  ],
  "homepage": "https://github.com/LiquidRazor/ListDisplay#readme",
  "bugs": {
    "url": "https://github.com/LiquidRazor/ListDisplay/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LiquidRazor/ListDisplay.git"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsc -p tsconfig.build.json",
    "prepublishOnly": "npm run clean && npm run build",
    "api:extract": "api-extractor run --local",
    "api:docs": "api-documenter markdown -i temp -o docs/api",
    "docs": "npm run clean && npm run build && npm run api:extract && npm run api:docs",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@microsoft/api-documenter": "^7.28.2",
    "@microsoft/api-extractor": "^7.55.2",
    "@types/prop-types": "^15.7.15",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "typescript": "^5.9.3",
    "vitepress": "^1.6.4"
  }
}
